@model MVCCRUDApp.Models.BookGenre



@using (Ajax.BeginForm("EditBookGenre", "BookGenre", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "div-record", OnSuccess = "$('.close').click()" }, new { @id = "saveForm" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(b=>b.BookGenreId)
    <div class="form-group">
        <label for="BookGenreName"><strong>NAME</strong></label>
        @Html.EditorFor(model => model.BookGenreName, new { htmlAttributes = new { @class = "form-control", @placeholder = "ENTER BOOK GENRE NAME" } })
        @Html.ValidationMessageFor(model => model.BookGenreName, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <p id="Status" />
    </div>
    <div class="modal-footer">
        <input type="submit" value="UPDATE" class="btn btn-primary btn-block" name="cmd" />
    </div>

}



<script>
    $(document).ready(function () {
            $("#saveForm").validate({
                rules: {
                    BankCode: "required",
                    BankName: "required"
                },
                messages: {
                    BankCode: "Please input bank code!",
                    BankName: "Please input bank name!",
                    submitHandler: function (form) {
                        form.submit();
                    }
                }

            });
        });
</script>

